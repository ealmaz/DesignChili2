<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding_16dp"
    android:paddingBottom="@dimen/padding_16dp">

    <TextView
        style="@style/Chili.H20.Primary.700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тайтл боттомщита" />

    <com.design2.chili2.view.input.BaseInputView
        android:id="@+id/input_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_16dp"
        android:gravity="start"
        android:textAppearance="@style/Chili.H16.Primary.700"
        app:message="Тапни и откроется клавиатура" />

    <Button
        android:id="@+id/btn_action"
        style="@style/Chili.ButtonStyle.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_32dp"
        android:text="Запусти действие" />

</LinearLayout>
