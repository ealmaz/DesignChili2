<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cell_cv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/ChiliSurfaceBackground"
    android:paddingBottom="@dimen/padding_16dp">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_16dp"
        android:paddingBottom="220dp"
        tools:context=".MainActivity">

        <kg.devcats.chili3.view.divider.DividerView
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16dp"
            app:dividerActionText="Кнопка"
            app:dividerSubtitle="Подзаголовок"
            app:dividerTitle="Заголовок" />

        <kg.devcats.chili3.view.divider.DividerView
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16dp"
            app:dividerActionText="Кнопка"
            app:dividerTitle="Заголовок" />

        <kg.devcats.chili3.view.divider.DividerView
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16dp"
            app:dividerActionText="Кнопка"
            app:dividerIsNotificationVisible="true"
            app:dividerTitle="Заголовок" />

        <kg.devcats.chili3.view.divider.DividerView
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16dp"
            app:dividerActionText="Кнопка"
            app:dividerIsNotificationVisible="true"
            app:dividerSubtitle="Подзаголовок"
            app:dividerTitle="Заголовок" />

    </LinearLayout>
</ScrollView>
