<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?ChiliSurfaceBackground"
    android:id="@+id/buttons_sv">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <com.design2.chili2.view.buttons.LoaderButton
            android:text="Loader button"
            android:id="@+id/loader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_16dp"/>

        <TextView
            android:id="@+id/stop_loader"
            android:text="Stop loader"
            android:layout_gravity="end"
            style="@style/Chili.ButtonStyle.Component"
            android:layout_marginStart="@dimen/padding_16dp"
            android:layout_marginEnd="@dimen/padding_16dp"/>

        <Button
            android:id="@+id/primary"
            style="@style/Chili.ButtonStyle.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary button"
            android:layout_marginStart="@dimen/padding_16dp"
            android:layout_marginEnd="@dimen/padding_16dp"
            android:layout_marginTop="@dimen/padding_8dp"/>

        <Button
            android:text="Primary button disabled"
            style="@style/Chili.ButtonStyle.Primary"
            android:enabled="false"
            android:layout_marginStart="@dimen/padding_16dp"
            android:layout_marginEnd="@dimen/padding_16dp"
            android:layout_marginTop="@dimen/padding_8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_1_alpha_50"
            android:layout_marginTop="@dimen/padding_16dp"/>

        <Button
            android:id="@+id/secondary"
            android:text="Secondary button"
            style="@style/Chili.ButtonStyle.Secondary"
            android:layout_marginStart="@dimen/padding_16dp"
            android:layout_marginEnd="@dimen/padding_16dp"
            android:layout_marginTop="@dimen/padding_8dp"/>

        <Button
            android:text="Secondary button disabled"
            style="@style/Chili.ButtonStyle.Secondary"
            android:enabled="false"
            android:layout_marginStart="@dimen/padding_16dp"
            android:layout_marginEnd="@dimen/padding_16dp"
            android:layout_marginTop="@dimen/padding_8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_1_alpha_50"
            android:layout_marginTop="@dimen/padding_16dp"/>

        <Button
            android:text="Additional button"
            style="@style/Chili.ButtonStyle.Additional"
            android:layout_marginStart="@dimen/padding_16dp"
            android:layout_marginEnd="@dimen/padding_16dp"
            android:layout_marginTop="@dimen/padding_8dp"/>

        <Button
            android:text="Additional button disabled"
            style="@style/Chili.ButtonStyle.Additional"
            android:enabled="false"
            android:layout_marginStart="@dimen/padding_16dp"
            android:layout_marginEnd="@dimen/padding_16dp"
            android:layout_marginTop="@dimen/padding_8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_1_alpha_50"
            android:layout_marginTop="@dimen/padding_16dp"/>

        <TextView
            android:text="Component button"
            style="@style/Chili.ButtonStyle.Component"
            android:layout_marginStart="@dimen/padding_16dp"
            android:layout_marginEnd="@dimen/padding_16dp"
            android:layout_marginTop="@dimen/padding_8dp"/>

        <TextView
            android:text="Component button disabled"
            style="@style/Chili.ButtonStyle.Component"
            android:enabled="false"
            android:layout_marginStart="@dimen/padding_16dp"
            android:layout_marginEnd="@dimen/padding_16dp"
            android:layout_marginTop="@dimen/padding_8dp"/>

        <com.design2.chili2.view.buttons.IconedButton
            android:id="@+id/iconed_button"
            style="@style/Chili.ButtonStyle.Additional"
            android:text="Iconed button"
            android:layout_margin="@dimen/padding_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.design2.chili2.view.container.ExpandableContainer
            app:title="QuickActionButtonView"
            android:id="@+id/ec_qabutton"
            app:isNeedToSaveExpandedState="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_16dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipChildren="false"
                android:clipToPadding="false">

                <kg.devcats.chili3.view.cells.QuickActionButtonView
                    android:id="@+id/qab_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:title="В избранное"
                    app:rippleIcon="@drawable/ic_ripple_favourite"
                    app:icon="@drawable/ic_favourite" />

                <kg.devcats.chili3.view.cells.QuickActionButtonView
                    android:id="@+id/qab_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:title="В избранное"
                    app:isEnable="false"
                    app:disabledIcon="@drawable/ic_favourite_disabled"
                    app:icon="@drawable/ic_favourite" />

                <kg.devcats.chili3.view.cells.QuickActionButtonView
                    android:id="@+id/qab_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:title="В избранное"
                    app:rippleIcon="@drawable/ic_ripple_favourite"
                    app:icon="@drawable/ic_favourite" />

            </LinearLayout>

        </com.design2.chili2.view.container.ExpandableContainer>

        <com.design2.chili2.view.container.ExpandableContainer
            app:title="BonusTagView"
            android:id="@+id/ec_bonus_tag"
            app:isNeedToSaveExpandedState="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_16dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipChildren="false"
                android:clipToPadding="false">

                <kg.devcats.chili3.view.cells.BonusTagView
                    android:id="@+id/btv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:title="+10,00" />

                <kg.devcats.chili3.view.cells.BonusTagView
                    android:id="@+id/btv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_16dp"
                    app:title="Бонусы: 0,00" />

            </LinearLayout>

        </com.design2.chili2.view.container.ExpandableContainer>

    </LinearLayout>

</ScrollView>
