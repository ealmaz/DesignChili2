<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_12dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/view_20dp"
        android:layout_height="@dimen/view_20dp"
        android:layout_gravity="start|top"
        android:layout_marginEnd="@dimen/padding_8dp"
        tools:src="@drawable/chili_ic_info" />

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/Chili.H14.Primary.Bold"
            android:visibility="gone"
            tools:text="Title"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/Chili.H12.Primary"
            android:visibility="gone"
            tools:text="Subtitle"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btn_action"
            style="@style/Chili.ButtonStyle.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_12dp"
            android:visibility="gone"
            tools:text="Action"
            tools:visibility="visible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close_icon"
        android:layout_width="@dimen/view_20dp"
        android:layout_height="@dimen/view_20dp"
        android:layout_gravity="end|top"
        android:layout_marginStart="@dimen/padding_8dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/chili_ic_close_rounded"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>