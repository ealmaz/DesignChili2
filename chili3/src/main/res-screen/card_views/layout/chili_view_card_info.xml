<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/Chili.H16.Primary.700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="У вас новый смартфон?" />

    <TextView
        android:id="@+id/tv_subtitle"
        style="@style/Chili.H14.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="?ChiliInfoCardViewSubtitleHorizontalMargin"
        android:layout_marginTop="?ChiliInfoCardViewSubtitleTopMargin"
        android:gravity="center"
        tools:text="Подтвердите личность, чтобы получить доступ ко всем услугам" />

    <Button
        android:id="@+id/btn_additional"
        style="@style/Chili.ButtonStyle.Additional"
        android:layout_marginTop="?ChiliInfoCardViewButtonTopMargin"
        android:visibility="gone"
        tools:text="Служба поддержки"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_primary"
        style="@style/Chili.ButtonStyle.Primary"
        android:layout_marginTop="?ChiliInfoCardViewButtonTopMargin"
        android:visibility="gone"
        tools:text="Подтвердить личность"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_horizontal_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="?ChiliInfoCardViewButtonTopMargin">

        <Button
            android:id="@+id/btn_horizontal_additional"
            android:width="0dp"
            android:layout_weight="1"
            style="@style/Chili.ButtonStyle.Additional"
            android:visibility="gone"
            android:paddingStart="@dimen/padding_8dp"
            android:paddingEnd="@dimen/padding_8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/padding_12dp"
            tools:text="Это не я"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btn_horizontal_primary"
            android:width="0dp"
            android:layout_weight="1"
            style="@style/Chili.ButtonStyle.Primary"
            android:visibility="gone"
            android:paddingStart="@dimen/padding_8dp"
            android:paddingEnd="@dimen/padding_8dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Подтвердить личность"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>