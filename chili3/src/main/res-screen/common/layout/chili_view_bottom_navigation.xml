<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="?ChiliBottomNavigationViewBackgroundHeight"
        android:layout_marginTop="?ChiliBottomNavigationViewBackgroundTopMargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/chili_rounded_nav_bar" />

    <kg.devcats.chili3.view.common.CustomBottomNavigationView
        android:id="@+id/bottom_nav"
        style="@style/Chili.BaseNavigationComponentsStyle.BottomNavigationBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/chili_ic_shevron_down" />

</androidx.constraintlayout.widget.ConstraintLayout>