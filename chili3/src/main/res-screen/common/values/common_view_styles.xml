<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Chili.BottomNavigationViewStyle" parent="Chili.BaseChiliViewStyle"/>

    <style name="Chili.BaseNavigationComponentsStyle.BottomNavigationView">
        <item name="itemIconSize">?ChiliBottomNavigationViewItemIconSize</item>
        <item name="labelVisibilityMode">?ChiliBottomNavigationBarViewLabelVisibilityMode</item>
        <item name="itemBackground">?ChiliBottomNavigationViewItemBackground</item>
        <item name="itemTextAppearanceActive">?ChiliBottomNavigationViewItemTextAppearanceActive</item>
        <item name="itemTextAppearanceInactive">?ChiliBottomNavigationViewItemTextAppearanceInactive</item>
        <item name="itemTextColor">?ChiliBottomNavigationViewItemTextColor</item>
        <item name="elevation">?ChiliBottomNavigationViewElevation</item>
    </style>

    <style name="Chili.ButtonStyle.Component.IconTitledCardView">
        <item name="android:foreground">@null</item>
        <item name="android:background">@drawable/chili_component_button_background</item>
        <item name="android:stateListAnimator">@animator/translucent_state_list_animator</item>
    </style>

    <style name="ThemeOverlay.ChiliNewSwitchBoxToggleTheme" parent="ThemeOverlay">
        <item name="ChiliSwitchBoxCheckedToggleColor">@color/c_2CBB42</item>
        <item name="ChiliSwitchBoxUncheckedToggleColor">@color/gray_1</item>
    </style>

    <style name="ThemeOverlay.ChiliCardCellShimmerCornerRadiusTheme" parent="ThemeOverlay">
        <item name="ChiliShimmerBoneRadius">@dimen/radius_6dp</item>
    </style>
