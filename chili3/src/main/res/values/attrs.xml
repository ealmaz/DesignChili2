<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DefaultStyleTheme">

        <!-- CardView -->
        <attr name="storiesCardViewDefaultStyle" format="reference" />
        <attr name="promoCardViewDefaultStyle" format="reference" />
        <attr name="subtitledSimpleCardViewDefaultStyle" format="reference" />
        <attr name="iconStateCardViewDefaultStyle" format="reference" />
        <attr name="productCardViewDefaultStyle" format="reference"/>

        <!-- DividerView -->
        <attr name="dividerViewDefaultStyle" format="reference" />

    </declare-styleable>

    <declare-styleable name="StoriesCardView">
        <attr name="storiesSrc" format="string" />
        <attr name="isViewed" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="android:adjustViewBounds" />
        <attr name="android:layout_width" />
        <attr name="android:layout_height" />
        <attr name="cardIconSize" format="dimension">
            <enum name="small" value="-1" />
            <enum name="medium" value="-2" />
            <enum name="large" value="-3" />
        </attr>
        <attr name="viewedBorder" format="reference" />
        <attr name="unviewedBorder" format="reference" />
        <attr name="storiesStatus" format="dimension">
            <enum name="viewed" value="0" />
            <enum name="unviewed" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PromoCardView">
        <attr name="title" format="string" />
        <attr name="titleTextAppearance" format="reference" />
        <attr name="promoIcon" format="string" />
        <attr name="promoStatusText" format="string" />
        <attr name="promoStatusTextAppearance" format="reference" />
        <attr name="promoStatus" format="dimension">
            <enum name="no_status" value="0" />
            <enum name="create" value="1" />
            <enum name="active" value="2" />
            <enum name="wait" value="3" />
            <enum name="expired" value="4" />
        </attr>
        <attr name="statusBackground" format="reference" />
        <attr name="promoExpiredBorder" format="reference" />
    </declare-styleable>

    <declare-styleable name="SubtitledSimpleCardView">
        <attr name="title" />
        <attr name="icon" />
        <attr name="titleTextAppearance" />
        <attr name="subtitle" />
        <attr name="subtitleTextAppearance" />
        <attr name="iconSecondary" format="reference" />
    </declare-styleable>

    <declare-styleable name="IconStateCardView">
        <attr name="title" />
        <attr name="subtitle" />
        <attr name="icon" />
    </declare-styleable>

    <declare-styleable name="DividerView">
        <attr name="dividerTitle" format="string" />
        <attr name="dividerSubtitle" format="string" />
        <attr name="dividerActionText" format="string" />
        <attr name="dividerEndIcon" format="reference" />
        <attr name="dividerIsNotificationVisible" format="boolean" />
        <attr name="dividerTitleTextAppearance" />
        <attr name="dividerSubtitleTextAppearance" />
        <attr name="dividerActionTextAppearance" />
    </declare-styleable>

    <declare-styleable name="ProductCardView">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="productImage" format="string"/>
        <attr name="title"/>
        <attr name="titleTextAppearance"/>
        <attr name="subtitle"/>
        <attr name="subtitleBackgroundColor" format="reference"/>
        <attr name="subtitleTextAppearance"/>
        <attr name="description"/>
        <attr name="descriptionTextAppearance" format="reference"/>
        <attr name="discount" format="string"/>
        <attr name="discountTextAppearance" format="reference"/>
        <attr name="discountBackgroundColor" format="reference"/>
    </declare-styleable>
</resources>