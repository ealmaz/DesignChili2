<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/ChiliSimpleTextChipSelectedStateColor" />
            <corners android:radius="?attr/ChiliCardViewCornerRadius" />
        </shape>
    </item>

    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="?attr/ChiliSimpleTextChipUnselectedStateColor" />
            <corners android:radius="?attr/ChiliCardViewCornerRadius" />
        </shape>
    </item>
</selector>