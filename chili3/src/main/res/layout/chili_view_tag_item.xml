<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginTop="?ChiliProductCardViewTagTopInnerMargin"
    android:paddingHorizontal="?ChiliProductCardViewTagPaddingHorizontal"
    android:paddingVertical="?ChiliProductCardViewTagPaddingVertical">

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textAppearance="@style/Chili.H12.White1" />

    <ImageView
        android:id="@+id/iv_tag_icon"
        android:layout_width="?ChiliProductCardViewDiscountIconWidth"
        android:layout_height="?ChiliProductCardViewDiscountIconHeight"
        android:layout_marginStart="@dimen/padding_4dp"
        android:visibility="gone"
        tools:src="@drawable/ic_bonus_new"/>
</LinearLayout>
