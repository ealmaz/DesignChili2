<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_lock"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_pin1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_14dp"
        android:layout_marginVertical="@dimen/padding_8dp"
        android:layout_marginStart="@dimen/padding_16dp"
        tools:background="@drawable/chili_ic_pin_matcher_item_unselected" />

    <ImageView
        android:id="@+id/img_pin2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_14dp"
        android:layout_marginVertical="@dimen/padding_8dp"
        android:layout_marginStart="@dimen/padding_18dp"
        tools:background="@drawable/chili_ic_pin_matcher_item_unselected"/>

    <ImageView
        android:id="@+id/img_pin3"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_14dp"
        android:layout_marginVertical="@dimen/padding_8dp"
        android:layout_marginStart="@dimen/padding_18dp"
        tools:background="@drawable/chili_ic_pin_matcher_item_unselected" />

    <ImageView
        android:id="@+id/img_pin4"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_14dp"
        android:layout_marginVertical="@dimen/padding_8dp"
        android:layout_marginStart="@dimen/padding_18dp"
        android:layout_marginEnd="@dimen/padding_16dp"
        tools:background="@drawable/chili_ic_pin_matcher_item_unselected" />

</LinearLayout>