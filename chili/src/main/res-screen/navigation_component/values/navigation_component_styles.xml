<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Chili.BaseNavigationComponentsStyle" parent="Chili.BaseChiliViewStyle"/>

    <style name="Chili.BaseNavigationComponentsStyle.ChiliToolbar">
        <item name="toolbarTextAppearance">@style/Chili.H7.Marked.Bold</item>
        <item name="additionalTextTextAppearance">@style/Chili.H8.Secondary</item>
        <item name="toolbarEndIconSize">@dimen/view_24dp</item>
        <item name="toolbarLeftIconSize">@dimen/view_24dp</item>
        <item name="isDividerVisible">true</item>
        <item name="background">@color/white_1</item>
        <item name="navigationIcon">@drawable/chili_ic_back</item>
    </style>


    <style name="Chili.BaseNavigationComponentsStyle.NavigationBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/view_68dp</item>
        <item name="android:padding">@dimen/padding_6dp</item>
        <item name="android:background">@drawable/chili_bg_rounded_navigation_bar</item>
        <item name="itemIconTint">@color/chili_state_color_navigation_bar_icon</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemTextAppearanceActive">@style/Chili.H10.Primary.Bold</item>
        <item name="itemTextAppearanceInactive">@style/Chili.H10.Primary.Bold</item>
        <item name="itemTextColor">@color/chili_state_color_navigation_bar_text</item>
        <item name="elevation">@dimen/elevation_0dp</item>
    </style>

</resources>
