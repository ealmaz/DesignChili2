<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Chili.CardViewStyle" parent="Chili.BaseChiliViewStyle">
        <item name="cardBackground">?ChiliCardViewBackground</item>
        <item name="cardCornerRadius">?ChiliCardViewCornerRadius</item>
        <item name="cardElevation">?ChiliCardViewElevation</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Chili.CardViewStyle.ExpandableCardItemView">
        <item name="cardElevation">0dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="Chili.CardViewStyle.AccentCardViewStyle"/>

    <style name="Chili.CardViewStyle.CategoryCardView"/>

    <style name="Chili.CardViewStyle.PaymentCardView"/>

    <style name="Chili.CardViewStyle.SimpleCardView"/>

    <style name="Chili.CardViewStyle.BalanceCardView"/>

    <style name="Chili.CardViewStyle.BankCard">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:foreground">@null</item>
        <item name="cardCornerRadius">?ChiliBankCardViewCornerRadius</item>
    </style>

    <style name="Chili.CardViewStyle.SingleSelectedCard"/>

    <style name="Chili.CardViewStyle.TitleLogoCard"/>

    <style name="Chili.CardViewStyle.PromoBannerCard"/>

