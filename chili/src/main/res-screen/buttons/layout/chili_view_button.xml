<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv_start_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="?ChiliButtonStartIconEndMargin"
            android:visibility="gone"
            tools:src="@drawable/ic_info"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Google Play"/>

        <ImageView
            android:id="@+id/iv_end_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="?ChiliButtonEndIconStartMargin"
            android:visibility="gone"
            tools:src="@drawable/ic_info"
            tools:visibility="visible" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="?attr/ChiliButtonLoaderSize"
        android:layout_height="?attr/ChiliButtonLoaderSize"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateOnly="true"
        android:indeterminateTintMode="src_atop"
        tools:visibility="visible" />

</FrameLayout>