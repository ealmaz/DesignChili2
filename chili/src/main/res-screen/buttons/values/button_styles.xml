<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Chili.ButtonStyle" parent="Chili.BaseChiliViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">?ChiliPrimaryButtonPaddingTop</item>
        <item name="android:paddingBottom">?ChiliPrimaryButtonPaddingBottom</item>
        <item name="android:paddingStart">?ChiliPrimaryButtonPaddingStart</item>
        <item name="android:paddingEnd">?ChiliPrimaryButtonPaddingEnd</item>
        <item name="android:foreground">@drawable/chili_ripple_rounded_corner_foreground</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Chili.ButtonStyle.Primary">
        <item name="android:foreground">@drawable/chili_ripple_button_primary</item>
        <item name="android:background">@drawable/chili_bg_button_primary</item>
        <item name="android:textAppearance">@style/Chili.PrimaryButtonText</item>
        <item name="loaderColor">?attr/ChiliPrimaryButtonTextColorActive</item>
    </style>

    <style name="Chili.ButtonStyle.Secondary">
        <item name="android:foreground">@drawable/chili_ripple_button_secondary</item>
        <item name="android:background">@drawable/chili_bg_button_secondary</item>
        <item name="android:textAppearance">@style/Chili.SecondaryButtonText</item>
        <item name="loaderColor">?attr/ChiliSecondaryButtonTextColorActive</item>
    </style>

    <style name="Chili.ButtonStyle.Additional">
        <item name="android:background">@drawable/chili_bg_button_additional</item>
        <item name="android:textAppearance">@style/Chili.AdditionalButtonText</item>
        <item name="loaderColor">?attr/ChiliAdditionalButtonTextColorActive</item>
    </style>

    <style name="Chili.ButtonStyle.Component">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:foreground">@drawable/chili_ripple_rounded_corner_component_button</item>
        <item name="android:background">@drawable/chili_component_button_background</item>
        <item name="android:textAppearance">@style/Chili.ComponentButtonText</item>
        <item name="android:paddingTop">?attr/ChiliComponentButtonVerticalPadding</item>
        <item name="android:paddingBottom">?attr/ChiliComponentButtonVerticalPadding</item>
        <item name="android:paddingStart">?attr/ChiliComponentButtonHorizontalPadding</item>
        <item name="android:paddingEnd">?attr/ChiliComponentButtonHorizontalPadding</item>
    </style>

    <style name="Chili.LoaderButton">
    </style>

    <style name="Chili.ButtonStyle.NewAdditional">
        <item name="android:foreground">@drawable/chili_new_additional_button_ripple</item>
        <item name="android:background">@drawable/chili_new_additional_button_background</item>
        <item name="android:textColor">?attr/ChiliMarkedTextColor</item>
        <item name="android:fontFamily">?attr/ChiliAdditionalButtonTextFont</item>
        <item name="android:textSize">?attr/ChiliAdditionalButtonTextSize</item>
    </style>

    <style name="Chili.ButtonStyle.Accent">
        <item name="android:textAppearance">@style/Chili.PrimaryButtonText</item>
        <item name="android:background">@drawable/chili_bg_button_accent</item>
    </style>

</resources>