<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Chili.BaseDialogStyle" parent="Chili.BaseChiliViewStyle">

    </style>


    <style name="Chili.DatePickerSpinnerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="Chili.TimePickerSpinnerStyle" parent="Widget.MaterialComponents.TimePicker">
        <item name="android:timePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="Chili.NumberPickerStyle">
        <item name="colorControlNormal">?attr/ChiliDividerColor</item>
        <item name="android:textSize">?attr/ChiliTextSizeH7</item>
    </style>


    <style name="Chili.DatePickerSpinnerTheme" parent="@android:style/Widget.Material.DatePicker">
        <item name="colorControlNormal">?attr/ChiliPickerDialogControlColor</item>
        <item name="android:textSize">?attr/ChiliTextSizeH7</item>
    </style>

    <style name="Chili.InAppPushStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Chili.Modal</item>
    </style>

    <style name="Chili.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Chili.AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/chili_bg_dialog</item>
        <item name="android:windowTitleStyle">@style/Chili.H7.Primary.Bold</item>
        <item name="android:textAppearance">@style/Chili.H8.Primary</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Chili.AlertDialog.ButtonTextStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Chili.AlertDialog.ButtonTextStyle</item>
    </style>
    
    <style name="Chili.AlertDialog.ButtonTextStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAppearance">@style/Chili.H8.Primary.Bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/ChiliDialogButtonTextColor</item>
    </style>



</resources>