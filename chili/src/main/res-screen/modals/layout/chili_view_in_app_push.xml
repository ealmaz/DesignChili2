<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/gray_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/padding_16dp"
        android:layout_marginEnd="@dimen/padding_16dp"
        android:layout_marginBottom="@dimen/padding_24dp"
        android:background="@drawable/chili_bg_in_app_push"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_16dp"
        android:paddingEnd="@dimen/padding_16dp">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="@dimen/view_24dp"
            android:layout_height="@dimen/view_24dp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/padding_16dp"
            android:src="@drawable/chili_ic_close" />

        <androidx.cardview.widget.CardView
            android:id="@+id/banner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_8dp"
            app:cardCornerRadius="@dimen/radius_12dp"
            app:cardElevation="@dimen/elevation_0dp">

            <ImageView
                android:id="@+id/iv_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                tools:src="@tools:sample/avatars" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/padding_16dp"
            android:ellipsize="end"
            android:maxLength="60"
            android:maxLines="1"
            android:textAppearance="@style/Chili.H7.Primary.700"
            tools:text="Супер текст специально для тебя!" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/padding_8dp"
            android:ellipsize="end"
            android:maxLength="190"
            android:maxLines="2"
            android:textAppearance="@style/Chili.H8.Secondary"
            tools:text="Этот рекламный текст, настолько хорош, что ты должен непременно нажать и про–
читать подробнее об условиях, а то потом придется искать это в разделе меню." />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/check_box_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_8dp"
            android:orientation="horizontal"
            android:paddingTop="@dimen/padding_8dp"
            android:visibility="gone"
            tools:visibility="visible">

            <CheckBox
                android:id="@+id/chb_show"
                style="@style/Chili.CheckBoxStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chb_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_4dp"
                android:textAppearance="@style/Chili.H8.Value"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/chb_show"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Больше не показывать новости о\nтарифах " />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_more"
            style="@style/Chili.ButtonStyle.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16dp"
            android:layout_marginBottom="@dimen/padding_16dp"
            tools:text="Button" />

    </LinearLayout>

</FrameLayout>