<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_top_drawable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/padding_8dp"
                android:background="@drawable/ic_bottom_sheet_top_drawable"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@+id/iv_detail_close"
                android:layout_width="@dimen/view_24dp"
                android:layout_height="@dimen/view_24dp"
                android:layout_gravity="top|right"
                android:layout_marginTop="@dimen/padding_10dp"
                android:layout_marginEnd="@dimen/padding_10dp"
                android:layout_marginBottom="@dimen/padding_8dp"
                android:background="@drawable/chili_ic_clear_24"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/view_140dp"
            android:layout_height= "@dimen/view_140dp"
            android:layout_marginVertical="@dimen/padding_8dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            tools:background="@tools:sample/avatars"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_16dp"
            android:layout_marginTop="@dimen/padding_8dp"
            android:textAppearance="@style/Chili.H7.Primary.Bold"
            android:visibility="gone"
            tools:text="@tools:sample/lorem"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_16dp"
            android:layout_marginTop="@dimen/padding_8dp"
            android:layout_marginBottom="@dimen/padding_32dp"
            android:textAppearance="@style/Chili.H8.Primary"
            android:visibility="gone"
            tools:text="@tools:sample/lorem"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btn_primary"
            style="@style/Chili.ButtonStyle.Primary"
            android:layout_marginHorizontal="@dimen/padding_16dp"
            android:layout_marginBottom="@dimen/padding_12dp"
            android:visibility="gone"
            tools:text="Primary"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btn_secondary"
            style="@style/Chili.ButtonStyle.Additional"
            android:layout_marginHorizontal="@dimen/padding_16dp"
            android:visibility="gone"
            tools:text="Primary"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
