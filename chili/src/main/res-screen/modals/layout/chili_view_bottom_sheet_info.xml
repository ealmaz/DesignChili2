<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_16dp"
    app:layout_constraintTop_toTopOf="@+id/ibtn_cancel">

    <ImageView
        android:id="@+id/iv_info_close"
        android:layout_width="@dimen/view_24dp"
        android:layout_height="@dimen/view_24dp"
        android:layout_gravity="top|right"
        android:layout_marginTop="@dimen/padding_10dp"
        android:layout_marginEnd="@dimen/padding_10dp"
        android:background="@drawable/chili_ic_clear_24"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/padding_16dp"
        android:layout_marginEnd="@dimen/padding_8dp"
        android:layout_marginBottom="@dimen/padding_16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/view_72dp"
            android:layout_height="@dimen/view_72dp"
            android:visibility="gone"
            tools:background="@tools:sample/avatars"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_16dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:textAppearance="@style/Chili.H8.Primary"
            android:visibility="gone"
            tools:text="@tools:sample/lorem/random"
            tools:visibility="visible" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_secondary"
        style="@style/Chili.ButtonStyle.Secondary"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:layout_marginBottom="@dimen/padding_8dp"
        android:visibility="gone"
        tools:text="Secondary"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_primary"
        style="@style/Chili.ButtonStyle.Primary"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:visibility="gone"
        tools:text="Primary"
        tools:visibility="visible" />

</LinearLayout>