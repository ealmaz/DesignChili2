<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/story_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <VideoView
        android:id="@+id/story_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0dp"
        android:layout_marginBottom="@dimen/padding_16dp"
        android:background="@drawable/chili_story_gradient_layer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/story_text_view"/>

    <LinearLayout
        android:id="@+id/progress_bars_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_6dp"
        android:layout_marginTop="@dimen/padding_16dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/padding_12dp"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/story_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_32dp"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        tools:text="Example Text"
        style="@style/Chili.H7.Primary.Bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/close_button"/>

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/chili_ic_close"
        app:layout_constraintTop_toBottomOf="@id/progress_bars_container"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/additional_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Chili.ButtonStyle.Component"
        android:text="Prodoljit'"
        app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>


