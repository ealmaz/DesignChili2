<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_icon"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_12dp"
        tools:src="@drawable/chili_ic_success"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Chili.H7.Primary.Bold"
        android:layout_marginTop="?ChiliTitledDividerTopMargin"
        android:layout_marginBottom="?ChiliTitledDividerBottomMargin"
        android:layout_marginEnd="@dimen/padding_12dp"
        tools:text="Заголовок"/>

    <TextView
        android:id="@+id/tv_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_16dp"
        style="@style/Chili.ButtonStyle.Component"
        android:visibility="gone"
        tools:text="Action"
        tools:visibility="visible"/>

</LinearLayout>