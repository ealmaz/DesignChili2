<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_16dp"
    app:layout_constraintTop_toTopOf="@+id/ibtn_cancel">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_top_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_8dp"
            android:background="@drawable/ic_bottom_sheet_top_drawable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_info_close"
            android:layout_width="@dimen/view_24dp"
            android:layout_height="@dimen/view_24dp"
            android:layout_gravity="top|right"
            android:layout_marginTop="@dimen/padding_20dp"
            android:layout_marginEnd="@dimen/padding_10dp"
            android:layout_marginBottom="@dimen/padding_8dp"
            android:background="@drawable/chili_ic_close"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:layout_marginTop="@dimen/padding_8dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:textAppearance="@style/Chili.H4.Primary.Bold"
        android:visibility="gone"
        tools:text="Заголовок"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:layout_marginTop="@dimen/padding_8dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:textAppearance="@style/Chili.H8.Primary"
        android:visibility="gone"
        tools:text="Подзаголовок"
        tools:visibility="visible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:layout_marginTop="@dimen/padding_28dp"
        android:layout_marginBottom="@dimen/padding_32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/view_32dp"
            android:layout_height="@dimen/view_32dp"
            android:visibility="gone"
            tools:background="@tools:sample/avatars"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_8dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:textAppearance="@style/Chili.H7.Primary.Bold"
            android:visibility="gone"
            tools:text="тут может быть длинный текст в 4 строки"
            tools:visibility="visible" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_secondary"
        style="@style/Chili.ButtonStyle.Additional"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:layout_marginBottom="@dimen/padding_8dp"
        android:visibility="gone"
        tools:text="Secondary"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_primary"
        style="@style/Chili.ButtonStyle.Primary"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:visibility="gone"
        tools:text="Primary"
        tools:visibility="visible" />

</LinearLayout>