<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:dither="true" android:shape="oval">
            <solid android:color="@color/gray_1" />
            <size android:width="@dimen/view_20dp" android:height="@dimen/view_20dp" />
            <stroke android:width="@dimen/view_4dp" android:color="#0000ffff" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:dither="true" android:shape="oval">
            <solid android:color="@color/white_1" />
            <size android:width="@dimen/view_20dp" android:height="@dimen/view_20dp" />
            <stroke android:width="@dimen/view_4dp" android:color="#0000ffff" />
        </shape>
    </item>
</selector>