<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <objectAnimator
            android:propertyName="alpha"
            android:valueFrom="1"
            android:valueTo="?ChiliTranslucentPressedAlphaValueTo"
            android:duration="?ChiliTranslucentPressedDuration"
            android:valueType="floatType"/>
    </item>

    <item android:state_pressed="false" >
        <objectAnimator
            android:propertyName="alpha"
            android:valueFrom="?ChiliTranslucentPressReleasedAlphaValueFrom"
            android:valueTo="1"
            android:duration="?ChiliTranslucentPressReleasedDuration"
            android:valueType="floatType"/>
    </item>
</selector>
